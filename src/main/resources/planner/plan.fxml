<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="planner.PlanSceneController">
    <VBox>
        <HBox   minWidth="1280"
                maxWidth="1280">
            <Region         minWidth="4"
                            maxWidth="4" />
            <VBox>
                <Label      text="Pick enemies"
                            minHeight="20"
                            maxHeight="20" />
                <ScrollPane minWidth="130"
                            maxWidth="130"
                            maxHeight="250"
                            hbarPolicy="NEVER">
                    <VBox   fx:id="enemyTickboxes" />
                </ScrollPane>
            </VBox>
            <Region         minWidth="8"
                            maxWidth="8" />
            <VBox>
                <Label      text="Pick targets"
                            minHeight="20"
                            maxHeight="20" />
                <ScrollPane minWidth="130"
                            maxWidth="130"
                            maxHeight="250"
                            hbarPolicy="NEVER">
                    <VBox   fx:id="targetTickboxes" >
                        <CheckBox   fx:id="caps" text="Capitals" />
                        <CheckBox   fx:id="offs" text="Off villages" />
                        <CheckBox   fx:id="small_artes" text="Small artefacts" />
                        <CheckBox   fx:id="large_artes" text="Large artefacts" />
                        <CheckBox   fx:id="bps_wws" text="BP/WW" />
                        <CheckBox   fx:id="planned_attacks" text="Planned attacks" />
                    </VBox>
                </ScrollPane>
            </VBox>
            <Region         minWidth="8"
                            maxWidth="8" />
            <VBox>
                <Label      text="Set landing times"
                            minHeight="20"
                            maxHeight="20" />
                <TextField  fx:id="landingTime"
                            minWidth="160"
                            maxWidth="160"
                            alignment="BASELINE_RIGHT"
                            onAction="#updateTimes" />
                <Region     VBox.vgrow="ALWAYS"
                            minHeight="5"
                            maxHeight="5" />
                <HBox       minWidth="160"
                            maxWidth="160" >
                    <Button     text="Randomise"
                                onAction="#randomiseTimes" />
                    <Region     HBox.hgrow="ALWAYS" />
                    <Label      text=" Â± "
                                minHeight="30"
                                maxHeight="30"
                                alignment="TOP_RIGHT" />
                    <TextField  fx:id="randomShiftMinsField"
                                prefWidth="22"
                                style="-fx-padding: 0 1 0 1"
                                alignment="BASELINE_CENTER" />
                    <Label      text=" min"
                                minHeight="30"
                                maxHeight="30"
                                alignment="TOP_RIGHT" />
                </HBox>
            </VBox>
            <Region         minWidth="8"
                            maxWidth="8" />
            <VBox>
                <Label      text="Tools"
                            minHeight="20"
                            maxHeight="20" />
                <Button     text="Data updates"
                            minWidth="110"
                            maxWidth="110"
                            onAction="#toUpdating" />
                <Button     text="Commands"
                            minWidth="110"
                            maxWidth="110"
                            onAction="#toCommands" />
                <Button     text="Save"
                            minWidth="110"
                            maxWidth="110"
                            onAction="#save" />
                <Label      fx:id="savedText" />
            </VBox>
            <Region         minWidth="8"
                            maxWidth="8" />
            <VBox           spacing="4" >
                <Label          text="Add:"
                                minHeight="20"
                                maxHeight="20" />
                <HBox>
                    <RadioButton    fx:id="fakes"
                                    selected="true"
                                    text="fakes" />
                    <RadioButton    fx:id="reals"
                                    text="reals" />
                </HBox>
                <HBox>
                    <TextField  fx:id="wavesField"
                                onAction="#updateWaves"
                                text="4"
                                prefWidth="22"
                                style="-fx-padding: 0 1 0 1"
                                alignment="BASELINE_CENTER" />
                    <Label      text=" wave(s)"
                                minHeight="30"
                                maxHeight="30"
                                alignment="TOP_RIGHT" />
                </HBox>
                <CheckBox       fx:id="conquer"
                                text="conquer" />
                <CheckBox       fx:id="withHero"
                                text="with hero" />
            </VBox>
            <Region     HBox.hgrow="ALWAYS" />
            <ScrollPane maxWidth="570"
                        minHeight="270"
                        maxHeight="270"
                        vbarPolicy="NEVER"
                        hbarPolicy="NEVER"
                        style="-fx-background-color: transparent" >
                <HBox       fx:id="attackerCols"
                            alignment="TOP_RIGHT" />
            </ScrollPane>
        </HBox>
        <ScrollPane minWidth="1280"
                    maxWidth="1280"
                    minHeight="530"
                    maxHeight="530" >
            <VBox   fx:id="targetRows" />
        </ScrollPane>
    </VBox>
</AnchorPane>
